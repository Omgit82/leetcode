//https://leetcode.com/problems/maximum-unique-subarray-sum-after-deletion/?envType=daily-question&envId=2025-07-27
class Solution {
public:
    int maxSum(vector<int>& nums) {
   sort(nums.begin(), nums.end());

    int sum = 0;
    bool hasPositive = false;

    for (int i = 0; i < nums.size(); i++) {
        if (nums[i] > 0) {
            hasPositive = true;
            if (i == 0 || nums[i] != nums[i - 1]) {
                sum += nums[i];  // Unique positive sum
            }
        }
    }

    // If no positive numbers, return the largest number (last in sorted array)
    if (!hasPositive) {
        return nums.back();
    }

    return sum;
}
};
